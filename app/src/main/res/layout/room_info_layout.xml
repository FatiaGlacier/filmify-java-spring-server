<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- RelativeLayout to position the first LinearLayout -->
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/room_info_background">

        <RelativeLayout
            android:id="@+id/coloredPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/room_info_upper"
            >

            <!-- First TextView -->
            <TextView
                android:id="@+id/codeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:maxLines="2"
                android:text="КОД:\n045-664"/>

            <TextView
                android:id="@+id/roomNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@id/codeTextView"
                android:fontFamily="@font/montserrat_alternates_bold"
                android:text="Обираємо фільм на ночівлю у Соні"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:gravity="right"
                android:layout_gravity="center_vertical"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/userListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@id/coloredPart"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:background="#00000000"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:text="Darina_128, milana85, sonia_uwu1, cutie_olia3"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
</merge>