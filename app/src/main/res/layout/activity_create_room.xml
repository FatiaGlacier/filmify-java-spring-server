<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blur_background"
    tools:context=".CreateRoomActivity">

    <RelativeLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/headerTextOutline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pacifico_regular"
            android:text="Створення кімнати"
            android:textColor="@color/red"
            android:textSize="24dp"
            android:translationX="2dp" />

        <TextView
            android:id="@+id/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pacifico_regular"
            android:text="Створення кімнати"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/black"
            android:src="@drawable/ic_avatar_circle" />

        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="60dp"
            android:background="#FFFFFF"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/topMenuLayout">

        <TextView
            android:id="@+id/creatingRoomInstruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="Після створення нової кімнати ви отпримаєте особистий код кімнати. Поділіться цим кодом з друзями щоб вони могли приєднатися до кімнати"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_alternates_semibold"
            android:gravity="center"
            android:padding="20dp"
            android:text="Придумайте назву для нової кімнати! "
            android:textColor="@color/white"
            android:textSize="20dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/rounded_edit_text"
            android:hint="Назва кімнати"
            android:textColorHint="@color/white">

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_alternates_regular"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/nameRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat_alternates_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="Назва повинна бути довжиною 3-40 символів та містити у собі кириличні та латинські літери та цифри"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/createRoomButton"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/pacifico_regular"
            android:text="Створити кімнату"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="23dp"
            app:cornerRadius="10dp"></com.google.android.material.button.MaterialButton>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>